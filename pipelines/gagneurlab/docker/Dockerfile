FROM bitnami/minideb:buster

MAINTAINER Ben Weisburd

RUN install_packages \
    ca-certificates \
    apt-utils \
    wget \
    curl \
    pkg-config \
    gcc \
    man-db \
    g++ \
    make \
    autoconf \
    unzip \
    bzip2 \
    zlib1g-dev \
    dpkg-dev \
    build-essential \
    libssl-dev \
    libcurl4-gnutls-dev \
    libbz2-dev \
    liblzma-dev \
    libxml2-dev \
    gfortran \
    libreadline-dev \
    libpcre3 \
    libpcre3-dev \
    libpng-dev \
    libjpeg-dev \
    default-libmysqld-dev \
    git

#RUN install_packages default-jdk

# install RScript
RUN wget https://cran.r-project.org/src/base/R-3/R-3.6.3.tar.gz \
    && tar xzf R-3.6.3.tar.gz \
    && rm R-3.6.3.tar.gz \
    && cd R-3.6.3 \
    && ./configure LIBnn=lib --with-x=no \
    && make \
    && make install

# install R pacakges
RUN R -e "install.packages('devtools', repos='http://cran.rstudio.com')"
RUN R -e "install.packages('BiocManager', repos='http://cran.rstudio.com')"
RUN R -e "devtools::install_github('gagneurlab/FRASER', ref='R3.6', dependencies=TRUE)"
RUN R -e "devtools::install_github('gagneurlab/OUTRIDER', dependencies=TRUE)"
RUN R -e "BiocManager::install('mumichae/tMAE')"

